<div class="container container-post-new">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h2>Ajouter un article</h2>
      <%= simple_form_for(@post) do |f| %>
        <%= f.input :date, label: "Date"  %>
        <%= f.input :title, label: "Titre" %>
        <%= f.input :content, as: :text, label: "Contenu" %>
        <%= f.input :picture, label: "Image" %>
        <%= f.button :submit, value: 'Publier cet article', class: 'btn btn-post'%>
      <% end %>
      <br>
      <%= link_to "Retour Ã  l'accueil", root_path %>
    </div>
  </div>
</div>
