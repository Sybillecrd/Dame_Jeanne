<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right d-none d-sm-block">

    <!-- Links -->
    <%= link_to "Le Collectif", about_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Contact", contact_path, class: "navbar-wagon-item navbar-wagon-link" %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item d-block d-sm-none">
    <div class="dropdown">
      <i class="fas fa-bars fa-2x dropdown" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="about">Le Collectif</a></li>
        <li><a href="contact">Contact</a></li>
      </ul>
    </div>
  </div>
</div>
