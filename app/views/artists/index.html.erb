<div class="container">
  <div class="cards-container">
    <% @projects.each do |project| %>
      <% if project.posters.length > 0 %>
        <div id="carouselExampleSlidesOnly" data-interval="3000" class="carousel slide">
          <div class="carousel-inner">
              <% project.posters.each_with_index do |poster, index| %>
                <div class="carousel-item <%= 'active' if index.zero? %>">
                  <%= link_to artist_path(project.artist) do %>
                    <%= cl_image_tag poster.picture, class: "d-block w-100" %>
                  <% end %>
                </div>
              <% end %>
            <div class="carousel-content list-group">
              <div class="carousel-content-artist">
                <%= link_to artist_path(project.artist) do %>
                  <%= "#{project.artist.first_name} #{project.artist.last_name}" %>
                <% end %>
              </div>
              <div class="carousel-content-project">
                <%= project.name %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
